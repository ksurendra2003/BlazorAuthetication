@layout LoginLayout
@inherits LoginBase

@page "/"


<div class="row">
    <div class="column"></div>
    <div class="column">

        <input type="button" value="Facebook Login" @onclick="LoginWithFacebook"></input>
        <input type="button" value="Facebook Login1" @onclick="LoginWithFacebook1"></input>
    </div>
    <div class="column">
        <form class="form-signin">
            <h1 class="h5 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="">
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit" @onclick="RedirectToIndex">Sign in</button>
        </form>
    </div>
</div>

<style>
    * {
        box-sizing: border-box;
    }

    .row {
        display: flex;
    }

    /* Create two equal columns that sits next to each other */
    .column {
        flex: 30%;
        padding: 10px;
        height: 300px; /* Should be removed. Only for demonstration */
    }
</style>



